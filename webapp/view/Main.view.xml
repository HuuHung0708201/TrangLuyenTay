<mvc:View
    controllerName="base.controller.Main"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
    xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:dnd-grid="sap.f.dnd"
    height="100%"
>
    <VBox
        id="homePage"
        width="100%"
        height="100%" 
        class="sapUiNoContentPadding gradient-bg">
        <Title text="Mua sắm tập trung" level="H2" class="whiteText fontSize20 marginBottom18" />
        <f:GridList id="gridList" items="{/menus}" class="customGridList">
            <f:customLayout>
                <grid:GridBoxLayout boxMinWidth="157px" boxColumns="7" />
            </f:customLayout>
            <f:GridListItem class="gridItem" type="Active" press=".onGridItemPress">
                <VBox height="100%" justifyContent="SpaceBetween" alignItems="Stretch">
                    <VBox width="100%" textAlign="Center" style="min-height:3rem;">
                        <Title text="{Name}" wrapping="true" class="customTitle" />
                    </VBox>
                    <VBox>
                        <HBox justifyContent="Start" width="100%" alignItems="Center" style="padding-left:0.5rem;">
                            <core:Icon src="{icon}" class="size24" color="#031E48" />
                            <Label text="{number}" class="LabelHBoxNumber" />
                        </HBox>
                        <Label text="{des}" class="LabelText"/>
                    </VBox>
                </VBox>
            </f:GridListItem>
        </f:GridList>
    </VBox>
</mvc:View>